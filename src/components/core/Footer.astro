---
import { Icon } from 'astro-icon/components';
import Container  from '../core/Container.astro';
import Plug from './Plug.astro';

const { footerSocials, footerLists, copyrightName, background, color, brandDescription, showPlug: showPlug = true } =
  Astro.props;
---

<footer
  class="site-footer"
  style={background && `--footer-bg:${background}; --footer-color:${color}`}
>
  <Container>
    <div class="site-footer__grid">
      <section class="site-footer__brand">
        <div>
          <slot name="logo" />
        </div>
        {brandDescription && <p class="site-footer__description">{brandDescription}</p>}
        <a class="site-footer__cta" href="/#book-call">Book a Free Intro Call</a>
        <ul class="site-footer__socials">
          {
            footerSocials.map((social) => (
              <li>
                <a
                  href={social.url}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="site-footer__social-link"
                  title={`Open ${social.name} profile`}
                >
                  <Icon name={social.icon} width={24} height={24} />
                </a>
              </li>
            ))
          }
        </ul>
      </section>
      {
        footerLists.map((list, index) => (
          <section class={`site-footer__links-col site-footer__links-col-${index + 1}`}>
            <h3>{list.title}</h3>
            <ul class="site-footer__link-list">
              {list.items.map((item) => (
                <li>
                  <a href={item.slug}>{item.title}</a>
                </li>
              ))}
            </ul>
          </section>
        ))
      }
    </div>
    <div class="site-footer__bottom">
      <p>Copyright &copy; {new Date().getFullYear()} {copyrightName}</p>
      <div class="site-footer__bottom-right">
        {showPlug && <Plug/>}
      </div>
    </div>
  </Container>
</footer>

<style>
  .site-footer {
    --footer-bg: #ffffff;
    --footer-color: #000000;
    background-color: var(--footer-bg);
    color: var(--footer-color);
    margin-top: 4rem;
  }
  .site-footer :global(.container) {
    max-width: 1200px;
  }
  .site-footer__grid {
    padding: 4.5rem 0 2.5rem;
    display: grid;
    grid-template-columns: 1.55fr 1fr 1fr 1fr;
    gap: 2rem;
  }
  .site-footer__brand {
    max-width: 24rem;
    margin-top: -1.2rem;
  }
  .site-footer__brand > div {
    transform: translateY(0.45rem);
  }
  .site-footer__description {
    margin: 1rem 0 1.25rem;
    color: rgba(0, 0, 0, 0.72);
    font-size: 0.86rem;
    line-height: 1.7;
  }
  .site-footer__cta {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    margin: 0 0 1.35rem;
    padding: 0.52rem 1rem;
    border-radius: 999px;
    background: linear-gradient(135deg, #f09a32, #d57909);
    color: #ffffff;
    text-decoration: none;
    font-size: 0.88rem;
    font-weight: 600;
    transition: filter 180ms ease, box-shadow 180ms ease, transform 180ms ease;
    box-shadow: 0 8px 18px rgba(213, 121, 9, 0.38);
  }
  .site-footer__cta:hover {
    filter: brightness(1.05);
    box-shadow: 0 9px 20px rgba(213, 121, 9, 0.46);
    transform: translateY(-0.5px);
  }
  .site-footer :global(.odyssey-logo) {
    filter: brightness(0) saturate(100%);
  }
  .site-footer h3 {
    margin: 0 0 0.45rem;
    font-size: 0.9rem;
    color: #f39a1f;
    font-weight: 700;
  }
  .site-footer__grid > section:not(.site-footer__brand) {
    justify-self: end;
    text-align: left;
    margin-top: 2.55rem;
  }
  .site-footer__links-col-1,
  .site-footer__links-col-2 {
    transform: translateX(4.4rem);
  }
  .site-footer__link-list {
    margin: 0;
    padding: 0;
    list-style: none;
  }
  .site-footer__link-list li {
    margin: 0 0 0.28rem;
  }
  .site-footer__link-list a {
    text-decoration: none;
    color: rgba(0, 0, 0, 0.78);
    font-size: 0.88rem;
    transition: color 160ms ease, opacity 160ms ease;
  }
  .site-footer__link-list a:hover {
    color: #000000;
    opacity: 1;
  }
  .site-footer__socials {
    margin: 0;
    padding: 0;
    display: flex;
    gap: 0.65rem;
    list-style: none;
  }
  .site-footer__social-link {
    text-decoration: none;
    color: #000000;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 2rem;
    height: 2rem;
    border-radius: 999px;
    background: rgba(0, 0, 0, 0.06);
    transition: background-color 160ms ease, color 160ms ease;
  }
  .site-footer__social-link:hover {
    color: #000000;
    background: rgba(0, 0, 0, 0.14);
  }
  .site-footer__bottom {
    border-top: 1px solid rgba(0, 0, 0, 0.12);
    padding: 1rem 0 1.5rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 1rem;
  }
  .site-footer__bottom p {
    margin: 0;
    color: rgba(0, 0, 0, 0.72);
    font-size: 0.84rem;
  }
  .site-footer__bottom-right {
    display: flex;
    align-items: center;
  }
  @media (max-width: 768px) {
    .site-footer__grid {
      padding: 3.5rem 0 2rem;
      grid-template-columns: repeat(2, 1fr);
      gap: 1.6rem;
    }
    .site-footer__brand {
      grid-column: 1 / -1;
      max-width: 100%;
    }
    .site-footer__grid > section:not(.site-footer__brand) {
      justify-self: start;
      text-align: left;
    }
    .site-footer__bottom {
      flex-direction: column;
      align-items: flex-start;
    }
  }
  @media (max-width: 600px) {
    .site-footer__grid {
      padding: 3rem 0 1.6rem;
      grid-template-columns: 1fr;
      gap: 1.35rem;
    }
    .site-footer__bottom {
      padding-bottom: 1.2rem;
    }
  }
</style>
